<Window x:Class="NetAi.PencereLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log Kayıtları" Height="200" Width="650"
        WindowStartupLocation="Manual" ShowInTaskbar="False" WindowState="Normal" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <TextBox x:Name="LogTextBox" IsReadOnly="True" 
                 VerticalScrollBarVisibility="Auto" 
                 HorizontalScrollBarVisibility="Auto" 
                 TextWrapping="Wrap" 
                 FontFamily="Arial" 
                 Background="#FFDDDDDD"
                 Margin="0"/>
    </Grid>
</Window>